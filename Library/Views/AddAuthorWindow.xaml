<Window x:Class="Library.Views.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="AddAuthorWindow" 
        WindowStartupLocation="CenterScreen"
        Height="450" 
        Width="800">
    <Border>
        <Canvas Background="White">
            <TextBlock Text="Add Author" FontWeight="Medium" Foreground="DodgerBlue" FontSize="30" Canvas.Left="312" Canvas.Top="40" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>


            <TextBlock Text="First Name" FontSize="30" Canvas.Left="317" Canvas.Top="113" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>
            <TextBlock Text="Last Name" FontSize="30" Canvas.Left="320" Canvas.Top="221" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>


            <TextBox Text="{Binding Firstname}" HorizontalAlignment="Left" Canvas.Left="240" VerticalAlignment="Top" Canvas.Top="158" Width="300" Height="40" FontSize="30"></TextBox>
            <TextBox Text="{Binding Lastname}" Canvas.Left="238" Canvas.Top="266" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" Height="40" FontSize="30"></TextBox>

            <Button Content="Add"
                    FontSize="30"
                    Background="DodgerBlue"
                    Foreground="White"
                    Canvas.Left="288" 
                    Canvas.Top="349"
                    Cursor="Hand"
                    Width="200"
                    Command="{Binding AddAuthorCommand}" 
                    HorizontalAlignment="Left" VerticalAlignment="Top">
            </Button>

        </Canvas>
    </Border>
</Window>
