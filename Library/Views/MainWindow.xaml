<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStartupLocation="CenterScreen"
        Height="450" 
        Width="800">
    <Canvas Height="434" VerticalAlignment="Bottom">
        <TextBox FontSize="20" Width="120" Height="40" TextChanged="IdTxtb_TextChanged" Canvas.Left="30" Canvas.Top="43" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Id, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox FontSize="20" Width="120" Height="40" Canvas.Left="186" Canvas.Top="43" Text="{Binding FirstName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox FontSize="20" Width="120" Height="40" Canvas.Left="340" Canvas.Top="43" Text="{Binding LastName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <Label FontSize="15" HorizontalAlignment="Center" Canvas.Left="30" VerticalAlignment="Top" Canvas.Top="15">Id</Label>
        <Label FontSize="15" HorizontalAlignment="Center" Canvas.Left="340" VerticalAlignment="Top" Canvas.Top="15">Firstname</Label>
        <Label FontSize="15" HorizontalAlignment="Center" Canvas.Left="186" VerticalAlignment="Top" Canvas.Top="15">Lastname</Label>
        <Label FontSize="25" Canvas.Left="490" HorizontalAlignment="Center" Canvas.Top="13" VerticalAlignment="Top">Authors</Label>

        <Button x:Name="AddUser"
                            Background="DodgerBlue" 
                            Command="{Binding AddAuthorCommand}"
                            Style="{StaticResource MyButtonStyle2}"
                            Canvas.Left="171" Canvas.Top="118" Width="150" Height="50">
            <Canvas>
                <TextBlock Text="Add Author" 
                                       FontSize="20" 
                                       Foreground="white"
                                       Canvas.Left="-52"
                                       Canvas.Top="-15" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center">
                </TextBlock>
            </Canvas>
        </Button>

        <Button x:Name="DeleteUser"
                            Command="{Binding DeleteCommmand}"
                            Background="red" 
                            BorderThickness="0"
                            Canvas.Left="170" Canvas.Top="271" Width="150" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Canvas>
                <TextBlock Text="Delete"
                                       FontSize="20" 
                                       IsEnabled="False"
                                       Foreground="white"
                                       Canvas.Left="-27"
                                       Canvas.Top="-15" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center">
                </TextBlock>
            </Canvas>
        </Button>

        <Button x:Name="Refresh"
                            Background="DodgerBlue"
                            BorderThickness="0"
                            Command="{Binding RefreshCommand}"
                            Canvas.Left="170" Canvas.Top="340" Width="150" Height="50">
            <Canvas>
                <TextBlock Text="Refresh"
                                       FontSize="20" 
                                       Foreground="white"
                                       IsEnabled="False"
                                       Canvas.Left="-32"
                                       Canvas.Top="-15" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center">
                </TextBlock>
            </Canvas>
        </Button>
        <ListBox Name="AuthorsListBox" ItemsSource="{Binding Authors}" SelectedIndex="{Binding SelectedId}" Width="300" Height="369" HorizontalAlignment="Center" Canvas.Left="490" VerticalAlignment="Top" Canvas.Top="48" FontSize="20">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SelectionChanged}"></i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ListBox>
    </Canvas>
</Window>