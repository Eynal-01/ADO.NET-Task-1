<UserControl x:Class="Library.Views.AuthorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3.5*"></ColumnDefinition>
            <ColumnDefinition Width="3.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Border >
                <CheckBox Cursor="Hand" IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" RenderTransformOrigin="0.835,0.7" Margin="8,8,0,8">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Border>
                <TextBlock Text="{Binding Author.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           FontSize="20"
                           Height="30"
                           FontWeight="Medium"
                           TextAlignment="Center" 
                           Margin="0,5,3,5">
                </TextBlock>
            </Border>
        </Grid>

        <Grid Grid.Column="2">
            <Border>
                <TextBlock Text="{Binding Author.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           FontSize="20"
                           Height="30"
                           FontWeight="Medium"
                           TextAlignment="Left"
                           Margin="10,5,3,5">
                </TextBlock>
            </Border>
        </Grid>

        <Grid Grid.Column="3">
            <Border>
                <TextBlock Text="{Binding Author.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           FontSize="20"
                           Height="30"
                           FontWeight="Medium"
                           TextAlignment="Left"
                           Margin="10,5,3,5">
                </TextBlock>
            </Border>
        </Grid>
    </Grid>
</UserControl>
